# ==============================================================================
# UWSM HYPRLAND SPECIFIC ENVIRONMENT
# ==============================================================================

# ------------------------------------------------------------------------------
# CURSORS / THEMES
# Sets cursor theme and size for both XWayland and native Wayland
# ------------------------------------------------------------------------------
export XCURSOR_THEME=Bibata-Modern-Classic
export XCURSOR_SIZE=24

export HYPRCURSOR_THEME=Bibata-Modern-Classic
export HYPRCURSOR_SIZE=24

# ------------------------------------------------------------------------------
# AQUAMARINE / RENDERING (Hyprland > 0.40)
# Critical rendering and GPU selection settings
# ------------------------------------------------------------------------------
# Fix for some visual artifacts (0 = disabled)
export AQ_FORCE_LINEAR_BLIT=0

# ------------------------------------------------------------------------------
# APPS & TOOLS CONFIGURATION
# Custom variables for user scripts and tools
# ------------------------------------------------------------------------------
# Default directory to save Hyprshot screenshots
export HYPRSHOT_DIR="$HOME/Pictures/Screenshots"

# Load local hyprland hardware exports (Aquamarine, etc)
if [ -f "$HOME/.config/uwsm/env.d/hyprland_hardware.sh" ]; then
    . "$HOME/.config/uwsm/env.d/hyprland_hardware.sh"
fi
